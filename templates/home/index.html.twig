{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<body class="animsition">
    <!-- Slide1 -->
    <section class="slide1">
        <div class="wrap-slick1">
            <div class="slick1">
                <div class="item-slick1 item1-slick1" style="background-image: url('{{ asset('images/photo1.jpg') }}')  "></div>
            </div>
        </div>
    </section>

    <section class="newproduct bgwhite p-t-45 p-b-105">
        <div class="container">
            <div class="sec-title p-b-60">
                <h3 class="m-text5 t-center">
                    Les derniers Immobiliers
                </h3>
            </div>
            <div class="row flex">
                {% for immobilier in immobiliers %}
                <div class="col-3">
                    <div class="card">
                        <img src="{{ asset('uploads/images/' ~  immobilier.image) }}"  class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('details_Immeuble',{id: immobilier.id , slug: immobilier.slug}) }}">{{ immobilier.title }}</a>
                            </h5>
                            <p class="card-text">{{ immobilier.city }} ({{ immobilier.adress }})</p>
                            <div class="text-primary">{{ immobilier.price }} dt</div>
                        </div>
                    </div>
                </div>



                    {% endfor %}
            </div>



</div>
    </section>
</body>
{% endblock %}
